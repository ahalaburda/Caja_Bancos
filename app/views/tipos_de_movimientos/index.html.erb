<h1> Tipos de Movimientos <button type="button" class="btn btn-info btn-circle btn-outline" id="btn1"><span class="glyphicon glyphicon-chevron-up" id="gbtn1"></span></button></h1>
<div id="form1">
  <%= render 'form' %>
</div>
<div class="reports" style="margin-left: 90.333333%">
  <%= link_to '#', onclick: "printpage()", class: 'btn btn-print btn-outline btn-circle', title: 'Imprimir reporte', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span class="glyphicon glyphicon-print" style="color: white"></span>
  <% end %>
  <%= link_to tipos_de_movimientos_path(@tipos_de_movimientos, format: 'pdf'), class: 'btn btn-pdf btn-outline btn-circle', title: 'Exportar en formato PDF', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span style="color: white">PDF</span>
  <% end %>
  <%= link_to tipos_de_movimientos_path(:format => :xls), class: 'btn btn-xls btn-outline btn-circle', title: 'Exportar en formato XLS', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span style="color: white">XLS</span>
  <% end %>
</div></br>
<table id="table">
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Tipo</th>
      <th>Acciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipos_de_movimientos.each do |tipos_de_movimiento| %>
      <tr>
        <td><%= tipos_de_movimiento.descripcion %></td>
        <td><%= tipos_de_movimiento.tipo %></td>
         <td>         
            <%= link_to edit_tipos_de_movimiento_path(tipos_de_movimiento), class: 'btn btn-warning btn-outline btn-circle', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
            
            <%= link_to tipos_de_movimiento, method: :delete, data: { confirm: 'Va eliminarlo, esta seguro?' }, class: 'btn btn-danger btn-outline btn-circle', title: 'Borrar', 'data-toggle' => 'tooltip', 'data-placement' => 'right'  do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
      </td>
    <% end %>
  </tbody>
</table>
<div id="tabla_print">
  <h1>Tipos de Movimientos</h1>
  <table class="table table-striped table-hover" >
   <thead>
      <tr>
        <th>Descripcion</th>
        <th>Tipo</th>
      </tr>
    </thead>
    <tbody>
      <% @tipos_de_movimientos.each do |tipos_de_movimiento| %>
        <tr>
          <td><%= tipos_de_movimiento.descripcion %></td>
          <td><%= tipos_de_movimiento.tipo %></td>
        </tr>
      <% end %>
    </tbody>
 </table>
</div>