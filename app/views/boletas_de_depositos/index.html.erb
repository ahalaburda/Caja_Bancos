<h1> Boletas de depositos <button type="button" class="btn btn-info btn-outline btn-circle" id="btn1"><span class="glyphicon glyphicon-chevron-up" id="gbtn1"></span></button></h1>
<div id="form1">
  <%= render 'form' %>
</div>
<div class="reports" style="margin-left: 90.333333%">
  <%= link_to '#', onclick: "printpage()", class: 'btn btn-print btn-outline btn-circle', title: 'Imprimir reporte', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span class="glyphicon glyphicon-print" style="color: white"></span>
  <% end %>
  <%= link_to boletas_de_depositos_path(@boletas_de_depositos, format: 'pdf'), class: 'btn btn-pdf btn-outline btn-circle', title: 'Exportar en formato PDF', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span style="color: white">PDF</span>
  <% end %>
  <%= link_to boletas_de_depositos_path(:format => :xls), class: 'btn btn-xls btn-outline btn-circle', title: 'Exportar en formato XLS', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
    <span style="color: white">XLS</span>
  <% end %>
</div></br>
<table id="table">
  <thead>
    <tr>
      <th>Id banco</th>
      <th>Id persona</th>
      <th>Id cuenta bancaria</th>
      <th>Id caja</th>
      <th>Fecha</th>
      <th>Acciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @boletas_de_depositos.each do |boletas_de_deposito| %>
      <tr>
        <td><%= boletas_de_deposito.id_banco %></td>
        <td><%= boletas_de_deposito.id_persona %></td>
        <td><%= boletas_de_deposito.id_cuenta_bancaria %></td>
        <td><%= boletas_de_deposito.id_caja %></td>
        <td><%= boletas_de_deposito.fecha %></td>
        <td>

            <%= link_to edit_boletas_de_deposito_path(boletas_de_deposito), class: 'btn btn-warning btn-outline btn-circle', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
            
            <%= link_to boletas_de_deposito, method: :delete, data: { confirm: 'Va eliminarlo, esta seguro?' }, class: 'btn btn-danger btn-outline btn-circle', title: 'Borrar', 'data-toggle' => 'tooltip', 'data-placement' => 'right'  do %>
              <span class="glyphicon glyphicon-remove"></span>
            <% end %>
          </td>  
      </tr>
    <% end %>
  </tbody>
</table>
<!-- tabla oculta formateada para impresion -->
