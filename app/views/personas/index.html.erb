<h1> Personas <button type="button" class="btn btn-info"><span class="glyphicon glyphicon-plus"></span></button></h1>
<div id="form1">
  <%= render 'form' %>
</div>
<table id="table">
  <thead>
    <tr>
      <th>Id tipo de persona</th>
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Localidad</th>
      <th>Departamento</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.id_tipo_de_persona %></td>
        <td><%= persona.nombre %></td>
        <td><%= persona.direccion %></td>
        <td><%= persona.localidad %></td>
        <td><%= persona.departamento %></td>
        <td><%= persona.telefono %></td>
        <td><%= link_to 'Show', persona %></td>
        <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
        <td><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Persona', new_persona_path %>
