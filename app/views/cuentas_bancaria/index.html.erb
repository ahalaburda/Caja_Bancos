<h1> Cuentas Bancarias <button type="button" class="btn btn-info btn-outline btn-circle" id="btn1"><span class="glyphicon glyphicon-chevron-up" id="gbtn1"></span></button></h1>
<div id="form1">
  <%= render 'form' %>
</div>
<table id="table">
  <thead>
    <tr>
      <th>Id banco</th>
      <th>Fecha de apertura</th>
      <th>Saldo</th>
      <th>Id firmante</th>
      <th>Acciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cuentas_bancaria.each do |cuentas_bancarium| %>
      <tr>
        <td><%= cuentas_bancarium.id_banco %></td>
        <td><%= cuentas_bancarium.fecha_de_apertura %></td>
        <td><%= cuentas_bancarium.saldo %></td>
        <td><%= cuentas_bancarium.id_firmante %></td>
        <td>
           <!--  <%= link_to cuentas_corrientes_ventas , class: 'btn btn-info btn-outline btn-circle', title: 'View', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
                <span class="glyphicon glyphicon-search"></span>
                <% end %> -->
            
            <%= link_to edit_cuentas_corrientes_ventas_path(cuentas_corrientes_ventas), class: 'btn btn-warning btn-outline btn-circle', title: 'Editar', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
            
            <%= link_to cuentas_corrientes_ventas, method: :delete, data: { confirm: 'Va eliminarlo, esta seguro?' }, class: 'btn btn-danger btn-outline btn-circle', title: 'Borrar', 'data-toggle' => 'tooltip', 'data-placement' => 'right'  do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>
  <%= link_to "PRINT", '#', onclick: "printpage()"%> | 
  <%= link_to 'PDF', cuentas_bancaria_path(@cuentas_bancaria, format: 'pdf') %> | 
  <%= link_to 'Excel Download', cuentas_bancaria_path(:format => :xls) %>
</table>